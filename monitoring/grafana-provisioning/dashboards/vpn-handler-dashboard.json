{
  "dashboard": {
    "id": null,
    "title": "VPN Handler Monitoring Dashboard",
    "tags": ["vpn", "security", "production"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "VPN Handler Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "count by (component) (last_over_time({component=~\".*VpnHandler\", event_type=~\"component_startup|vpn_initialization_completed\"}[5m]))",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"healthy": {"text": "HEALTHY", "color": "green"}}, "type": "value"},
              {"options": {"unhealthy": {"text": "UNHEALTHY", "color": "red"}}, "type": "value"}
            ],
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.8},
                {"color": "red", "value": 0.9}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "VPN Rotation Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "{component=~\".*VpnHandler\", event_type=\"rotation_success_rate_metric\"} | json | success_rate",
            "legendFormat": "Success Rate %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Current IP Request Count vs Quota",
        "type": "bargauge",
        "targets": [
          {
            "expr": "{component=~\".*VpnHandler\", event_type=\"statistics_collected\"} | json | line_format \"{{.statistics.requests_on_current_ip}} / {{.statistics.max_requests_per_ip}}\"",
            "legendFormat": "IP Usage",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "VPN Events Timeline",
        "type": "logs",
        "targets": [
          {
            "expr": "{component=~\".*VpnHandler\"} | json | line_format \"{{.timestamp}} [{{.level}}] {{.event_type}}: {{.message}}\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": true,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        },
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Error Rate by Event Type",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(count_over_time({component=~\".*VpnHandler\", level=~\"ERROR|CRITICAL\"}[5m]))",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 26}
      },
      {
        "id": 6,
        "title": "VPN Rotation Frequency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(count_over_time({component=~\".*VpnHandler\", event_type=~\"vpn_rotation_completed|rotation_success_rate_metric\"}[1h]))",
            "legendFormat": "Rotations per Hour",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-GrYlRd"},
            "custom": {
              "drawStyle": "bars",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 80,
              "gradientMode": "none"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 26}
      },
      {
        "id": 7,
        "title": "Security Violations",
        "type": "table",
        "targets": [
          {
            "expr": "{component=~\".*VpnHandler\", event_type=\"security_violation_detected\"} | json | table timestamp, violation_type, current_ip, request_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "cellOptions": {
                "type": "auto"
              },
              "inspect": false
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "violation_type"},
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background",
                    "mode": "basic"
                  }
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 34}
      },
      {
        "id": 8,
        "title": "Performance Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "{component=~\".*VpnHandler\", event_type=~\"request_delay_applied|request_timing_started\"} | json | line_format \"{{.event_type}}: {{.delay_seconds}}s\"",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 42}
      },
      {
        "id": 9,
        "title": "Critical Alerts",
        "type": "alert-list",
        "targets": [
          {
            "expr": "{component=~\".*VpnHandler\", level=\"CRITICAL\"} | json",
            "refId": "A"
          }
        ],
        "options": {
          "showOptions": "current",
          "maxItems": 20,
          "sortOrder": 1,
          "dashboardAlerts": false,
          "alertName": "",
          "dashboardTitle": "",
          "folderId": null,
          "tags": []
        },
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 50}
      }
    ],
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "VpnHandler",
            "value": "VpnHandler"
          },
          "hide": 0,
          "includeAll": false,
          "label": "Component",
          "multi": false,
          "name": "component",
          "options": [],
          "query": "label_values({component=~\".*VpnHandler\"}, component)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "type": "query"
        },
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "label": "Event Type",
          "multi": true,
          "name": "event_type",
          "options": [],
          "query": "label_values({component=~\".*VpnHandler\"}, event_type)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "type": "query"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Loki",
          "enable": true,
          "expr": "{component=~\".*VpnHandler\", level=\"CRITICAL\"}",
          "iconColor": "red",
          "name": "Critical Events",
          "titleFormat": "{{event_type}}",
          "textFormat": "{{message}}"
        }
      ]
    }
  }
}